/* 轮播图 */
.slide-image{
  width:100%;
  height:300rpx;
}
/*菜单样式：1行4列图片的布局*/
.navs{display: flex;}
.nav-item{ 
  width: 25%; /*百分比：对应的4列*/
   display: flex; 
   align-items: center; 
   flex-direction: column ; /*按列显示*/
   padding: 20rpx;
}
.nav-item .nav-image{ width: 120rpx; height: 120rpx; padding-left: 5px;} 
.nav-item text{ padding-top: 20rpx; font-size: 35rpx; padding-left: -5px;}
.nav-item navigator{padding: 3px;}

/* 最新产品————标题 */
.line_y{
  width: 3px; height: 18px; display: inline-block; background-color:  brown;
  margin-left: 1px;
}
view.text{
  display: flex; 
  align-items: center; 
  position: relative; 
  padding: 6px;    
  background-color:  aliceblue;
}
view.text text{margin-left: 10px;}

/* 最新产品————列表 */
goods_hot_div{
  width:100%;
  height:190rpx;
  overflow: hidden;
  
}
.goods_hot_box{
  width: 10000%;animation: lb linear 4s infinite;
}
.goods_hot{
  text-align: center;
  float: left;
  padding-left:20rpx;
  width:150rpx;
  overflow: hidden;
}
@keyframes lb{
  0%{margin-left: 0;}
  100%{margin-left:-960rpx; }
}
.goods_hot_img{width:150rpx;height:150rpx;display: block;}
.goods_hot_title{display: block;height: 60rpx;overflow: hidden;}
.goods_hot_pirce{display: block;}

/*精品推荐-1行2列图片*/
.cps2{
  display: flex;flex-wrap: wrap;/*自动换行*/
}
.cp-item2{
  width: 48%; display: flex; align-items: center;
   flex-direction: column; padding: 5rpx;
}
.cp-image2{
  width: 330rpx; height: 330rpx;
}
.cp-item2 text{
  padding-top: 10rpx; font-size: 35rpx; width: 100%; text-align: center;
  margin-left: 20rpx;
}


/* 销售排行  1行2列：左图片，右文字（多行文字） */
.line{
  display: flex; border-bottom: 1px solid lightgray; padding: 5px;
}

.toutiao-img{
  width: 80px; height: 80px;
}
.two-line-text{
   padding: 7px; display: flex; flex-direction: column;
}
.txt1{font-size: 16px; font-weight: bold; color: yellowgreen; }
.txt2{font-size: 14px;color:  silver; line-height: 28px;}
.txt3{font-size: 15px; color:   orangered;}
